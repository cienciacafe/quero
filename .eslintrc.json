{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "codeFrame": false,
    "ecmaFeatures": {
       "jsx": true
    },
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types": [2],
    "react/react-in-jsx-scope": [0],
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "computed-property-spacing": [2, "never"],
    "curly": ["error", "multi-line"],
    "eol-last": 2,
    "max-depth": [1, 3],
    "max-statements": [1, 20],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-undef": 2,
    "no-console": ["error", {"allow": ["warn", "error"]}],
    "no-use-before-define": ["error", "nofunc"],
    "object-curly-spacing": [1, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "never"],
    "keyword-spacing": [2, {"before": true, "after": true}],
    "space-unary-ops": 2
  }
}
